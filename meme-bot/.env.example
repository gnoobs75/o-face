# ===========================================
# MEMEBOSS BOT - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# KLIPY API (Required for both platforms)
# -------------------------------------------
# Get your API key from: https://klipy.com/developers
KLIPY_API_KEY=your_klipy_api_key_here

# -------------------------------------------
# MICROSOFT TEAMS BOT (Azure Bot Service)
# -------------------------------------------
# Get these from Azure Portal > Bot Services > Configuration
# Guide: https://learn.microsoft.com/en-us/azure/bot-service/bot-service-quickstart-registration
MICROSOFT_APP_ID=your_app_id_here
MICROSOFT_APP_PASSWORD=your_app_password_here
MICROSOFT_APP_TENANT_ID=your_tenant_id_here
# Options: SingleTenant, MultiTenant, UserAssignedMSI
MICROSOFT_APP_TYPE=MultiTenant

# -------------------------------------------
# SLACK BOT
# -------------------------------------------
# Get these from: https://api.slack.com/apps > Your App > Basic Information / OAuth
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_APP_TOKEN=xapp-your-app-token

# -------------------------------------------
# BOT BEHAVIOR SETTINGS
# -------------------------------------------
# Chance to respond to a message (0.0 to 1.0, default 0.3 = 30%)
RESPONSE_CHANCE=0.3

# Cooldown between responses per channel in ms (default 60000 = 1 minute)
COOLDOWN_MS=60000

# -------------------------------------------
# SERVER SETTINGS
# -------------------------------------------
# Port for the bot server (Teams uses this)
PORT=3978

# Port for Slack (if running separately)
SLACK_PORT=3000

# -------------------------------------------
# PLATFORM ENABLE FLAGS
# -------------------------------------------
# Set to 'true' to enable each platform
ENABLE_TEAMS=true
ENABLE_SLACK=true
